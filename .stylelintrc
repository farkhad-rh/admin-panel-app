{
  "plugins": [
    "stylelint-scss",
    "stylelint-prettier",
    "stylelint-order",
    "stylelint-declaration-block-no-ignored-properties"
  ],
  "extends": ["stylelint-config-recommended-scss", "stylelint-prettier/recommended"],
  "rules": {
    "prettier/prettier": true,
    "plugin/declaration-block-no-ignored-properties": true,
    "declaration-empty-line-before": [
      "always",
      { "except": ["after-declaration"], "ignore": ["after-comment", "first-nested"] }
    ],
    "rule-empty-line-before": [
      "always",
      { "except": ["first-nested"], "ignore": ["after-comment"] }
    ],
    "at-rule-empty-line-before": [
      "always",
      {
        "except": ["blockless-after-same-name-blockless", "first-nested"],
        "ignore": ["after-comment"],
        "ignoreAtRules": ["else"]
      }
    ],
    "no-descending-specificity": null,
    "color-hex-case": "lower",
    "color-hex-length": "short",
    "color-named": "never",
    "color-no-hex": null,
    "order/order": [
      "dollar-variables",
      "custom-properties",
      "declarations",
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "position",
        "hasBlock": false
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "grid",
        "hasBlock": false
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "grid-repeat",
        "hasBlock": false
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "flex-column",
        "hasBlock": false
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "flex-center",
        "hasBlock": false
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "flex-align-center",
        "hasBlock": false
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "flex-justify-center",
        "hasBlock": false
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "font",
        "hasBlock": false
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "ellipsis",
        "hasBlock": false
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "line-ellipsis",
        "hasBlock": false
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "transition",
        "hasBlock": false
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "placeholder",
        "hasBlock": false
      },
      {
        "type": "at-rule",
        "name": "include",
        "parameter": "breakpoint",
        "hasBlock": true
      },
      {
        "type": "rule",
        "selector": "&::before"
      },
      {
        "type": "rule",
        "selector": "&::after"
      },
      {
        "type": "rule",
        "selector": "&:not(:first-child)"
      },
      {
        "type": "rule",
        "selector": "&:not(:last-child)"
      },
      {
        "type": "rule",
        "selector": "&:first-child"
      },
      {
        "type": "rule",
        "selector": "&:last-child"
      },
      {
        "type": "rule",
        "selector": "&:nth-child.+"
      },
      "rules",
      {
        "type": "rule",
        "selector": "&:focus"
      },
      {
        "type": "rule",
        "selector": "&:hover"
      },
      {
        "type": "rule",
        "selector": "&\\.+"
      },
      {
        "type": "rule",
        "selector": "&:disabled"
      }
    ],
    "order/properties-order": [
      [
        "order",
        "content",
        "position",

        "display",
        "flex",
        "flex-grow",
        "flex-shrink",
        "flex-basis",
        "flex-direction",
        "flex-flow",
        "flex-wrap",
        "align-content",
        "align-items",
        "align-self",
        "justify-content",
        "justify-items",
        "justify-self",

        "grid",
        "grid-template-areas",
        "grid-template-rows",
        "grid-template-columns",
        "grid-row",
        "grid-column",

        "column-gap",
        "row-gap",
        "gap",

        "top",
        "right",
        "bottom",
        "left",
        "width",
        "height",
        "min-width",
        "max-width",
        "min-height",
        "max-height",

        "font",
        "font-family",
        "font-size",
        "font-weight",
        "font-style",
        "line-height",
        "letter-spacing",
        "white-space",
        "word-break",
        "text-align",
        "text-decoration",
        "text-decoration-color",
        "text-transform",
        "text-overflow",
        "text-rendering",
        "-webkit-font-smoothing",
        "-moz-osx-font-smoothing",

        "color",
        "fill",
        "stroke",
        "background",
        "background-color",
        "background-image",
        "background-repeat",
        "background-size",
        "background-position",
        "border",
        "border-color",
        "box-shadow",
        "border-radius",

        "object-fit",
        "opacity",
        "overflow",
        "overflow-x",
        "overflow-y",
        "-ms-overflow-style",
        "scrollbar-width",
        "visibility",

        "resize",
        "cursor",
        "user-select",
        "pointer-events",

        "filter",
        "backdrop-filter",
        "transform",
        "transform-origin",

        "transition",
        "transition-property",
        "transition-duration",
        "transition-timing-function",

        "animation",
        "animation-name",
        "animation-duration",
        "animation-timing-function",
        "animation-fill-mode",

        "padding",
        "padding-top",
        "padding-right",
        "padding-bottom",
        "padding-left",
        "margin",
        "margin-top",
        "margin-right",
        "margin-bottom",
        "margin-left",
        "z-index"
      ]
    ]
  }
}
